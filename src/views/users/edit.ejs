<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog Unicesumar - Editar Usu√°rio</title>
    <!-- Bootstrap CSS CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #1c1c1c;
      }
      .container {
        max-width: 600px;
        background-color: #2c2c2c;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
      }
      h1 {
        color: #e0e0e0;
        font-weight: bold;
        text-align: center;
        margin-bottom: 20px;
      }
      label {
        color: #e0e0e0;
      }
      .form-control {
        background-color: #1c1c1c;
        color: #e0e0e0;
        border: 1px solid #555;
      }
      .form-control:focus {
        background-color: #1c1c1c;
        color: #e0e0e0;
        border-color: #17a2b8;
        box-shadow: none;
      }
      .form-check-label {
        color: #e0e0e0;
      }
      .btn-outline-primary,
      .btn-outline-secondary {
        margin-right: 10px;
      }
      .mostrar-senha {
        cursor: pointer;
        color: #e0e0e0;
        position: absolute;
        right: 10px;
        top: 35px;
      }
      .password-container {
        position: relative;
      }
    </style>
  </head>
  <body>
    <div class="container mt-5">
      <h1>Editar Usu√°rio</h1>

      <% if (errorMessage) { %>
        <div class="alert alert-danger"><%= errorMessage %></div>
      <% } %>
      <% if (successMessage) { %>
        <div class="alert alert-success"><%= successMessage %></div>
      <% } %>

      <form action="/users/update/<%= user.id %>" method="POST">
        <div class="mb-3">
          <label for="name" class="form-label">Nome</label>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            value="<%= user.name %>"
            required
          />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            value="<%= user.email %>"
            required
          />
        </div>
        
        <!-- Senha Atual -->
        <div class="mb-3 password-container">
          <label for="current_password" class="form-label">Senha Atual</label>
          <input
            type="password"
            class="form-control"
            id="current_password"
            name="current_password"
            required
          />
          <span
            class="mostrar-senha"
            onclick="togglePasswordVisibility('current_password', this)"
            >üëÅÔ∏è</span>
        </div>
        
        <!-- Nova Senha -->
        <div class="mb-3 password-container">
          <label for="new_password" class="form-label">Nova Senha</label>
          <input
            type="password"
            class="form-control"
            id="new_password"
            name="new_password"
          />
          <span
            class="mostrar-senha"
            onclick="togglePasswordVisibility('new_password', this)"
            >üëÅÔ∏è</span>
        </div>

        <!-- Confirmar Nova Senha -->
        <div class="mb-3 password-container">
          <label for="confirm_new_password" class="form-label">Confirmar Nova Senha</label>
          <input
            type="password"
            class="form-control"
            id="confirm_new_password"
            name="confirm_new_password"
          />
          <span
            class="mostrar-senha"
            onclick="togglePasswordVisibility('confirm_new_password', this)"
            >üëÅÔ∏è</span>
        </div>

        <div class="mb-3">
          <label for="papel" class="form-label">Papel</label>
          <select class="form-control" id="papel" name="papel" required>
            <option value="1" <%= user.papel == 1 ? 'selected' : '' %>>Usu√°rio</option>
            <option value="2" <%= user.papel == 2 ? 'selected' : '' %>>Administrador</option>
            <option value="3" <%= user.papel == 3 ? 'selected' : '' %>>Senior</option>
            <option value="4" <%= user.papel == 4 ? 'selected' : '' %>>Junior</option>
            <option value="5" <%= user.papel == 5 ? 'selected' : '' %>>Estagi√°rio</option>
          </select>
        </div>
        <div class="form-check mb-3">
          <input
            class="form-check-input"
            type="checkbox"
            id="ativo"
            name="ativo"
            <%= user.ativo ? 'checked' : '' %>
          />
          <label class="form-check-label" for="active">
            Ativo
          </label>
        </div>
        <button type="submit" class="btn btn-outline-primary">Salvar Altera√ß√µes</button>
        <a href="/users/" class="btn btn-outline-secondary">Cancelar/Voltar</a>
      </form>
    </div>

    <!-- Bootstrap JS CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      function togglePasswordVisibility(fieldId, iconElement) {
        const field = document.getElementById(fieldId);
        if (field.type === 'password') {
          field.type = 'text';
          iconElement.textContent = 'üôà'; // √çcone para esconder a senha
        } else {
          field.type = 'password';
          iconElement.textContent = 'üëÅÔ∏è'; // √çcone para mostrar a senha
        }
      }
    </script>
  </body>
</html>
